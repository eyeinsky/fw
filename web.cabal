                      , text, bytestring
                      , hs-minu
                      , text-format-hs
                      , mtl, containers, unordered-containers, template-haskell
                      , network, network-simple
                      , case-insensitive
                      , wai, http-types, mime-types
                      , blaze-builder, blaze-html
                      , aeson
                      , warp
                      , tagged
                      , web-browser
                      , web-js
                      , file-embed
