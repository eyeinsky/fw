library
  exposed-modules:
        JS.DOM
      , JS.Blaze
      , Web.CSS
      , Web.HTML.Core
      , Web.HTML.Blaze
      , Web.HTML.Blaze.Bootstrap
      , Web
      , Web.Monad
      , HTTP.Common
      , HTTP.Header
      , HTTP.Response
      , HTTP.Response.InlineFile
      , URL
      , Cookie
